<div class="container" style="background-color: #f4f9ff;">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">کتابخانه آبی</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="AddUser" asp-controller="Account">ثبت‌نام کاربر جدید</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">ورود کاربر</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="AdminLogin" asp-controller="Admin">ورود ادمین</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="librarianLogin" asp-controller="librarian">ورود کتابدار</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="MyBarrow" asp-controller="Home">لیست امانت‌ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="PreviousReserves" asp-controller="Home">لیست امانت‌های قبلی</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Welcome Message -->
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="text-primary">به کتابخانه آبی خوش آمدید!</h1>
            <p class="text-muted">اینجا می‌توانید کتاب‌های مورد علاقه خود را پیدا کرده و به لیست امانت اضافه کنید.</p>
        </div>
    </div>

    <!-- Book List -->
<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow d-flex flex-column">
                <div class="card-body text-center">
                    <img style="width:150px; height:222px; object-fit:cover;" class="card-img-top mb-3" alt="تصویر یافت نشد" src="/img/@(Model[i].Id).jpg">
                    <h5 class="card-title text-primary">@Model[i].Name</h5>
                    <p class="card-text text-muted">@Model[i].Description</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center p-3">
                    <!-- موجودی کتاب -->
                    <div class="quantity-box">
                        <p class="text-muted mb-0">موجودی: <strong>@Model[i].Quantity</strong></p>
                    </div>
                    <!-- دکمه اضافه به لیست امانت -->
                    <div class="action-box">
                        @if (Model[i].Quantity > 0)
                        {
                            <form asp-action="AddToReserve" asp-controller="Home" method="post">
                                <input type="hidden" name="BookId" value="@Model[i].Id" />
                                <button type="submit" class="btn btn-primary">اضافه به لیست امانت</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>اتمام موجودی</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>

    <style>
        body {
            background-color: #f4f9ff; 
        }

        .navbar {
            border-radius: 0 0 10px 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
        }

        .nav-link {
            color: #fff;
            font-size: 1rem;
            margin-right: 15px;
        }

        .nav-link:hover {
            color: #ffeb3b !important;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 0.9rem;
        }

        .btn {
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: scale(1.05);
        }

        .btn-primary {
            background-color: #3949ab;
            border: none;
        }

        .btn-primary:hover {
            background-color: #1e88e5;
        }

        .btn-secondary {
            background-color: #6c757d; 
            border-color: #6c757d;
        }

        .btn-secondary:disabled {
            background-color: #ced4da; 
            border-color: #ced4da;
        }

        .quantity-box p {
            font-size: 14px;
            color: #007bff; 
        }

        .card-img-top {
            border-radius: 8px;
        }
    </style>

