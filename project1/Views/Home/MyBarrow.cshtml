@model Reserve

<style>
    body {
        background-color: #f0f8ff;
    }

    h2 {
        color: #0056b3;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: #ffffff;
        border: 1px solid #007bff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 12px;
        font-size: 16px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .table td {
        text-align: center;
        padding: 10px;
        font-size: 14px;
        color: #333333;
    }

    .table tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .table tr:nth-child(odd) {
        background-color: #ffffff;
    }

    .table tr:hover {
        background-color: #e9f7ff;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #003f7f;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #a71d2a;
    }

    .alert {
        background-color: #e9f7ff;
        border: 1px solid #007bff;
        color: #0056b3;
        padding: 15px;
        border-radius: 5px;
    }

    .text-center {
        text-align: center;
    }
</style>

