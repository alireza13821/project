@model List<Reserve>

<div class="container mt-5">
    <h2 class="text-center mb-4">امانت های قبلی</h2>
        <table class="table table-hover table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="text-center">شماره رزرو</th>
                    <th class="text-center">تاریخ رزرو</th>
                    <th class="text-center">کتاب‌ها</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">علت رد</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var reserve in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@reserve.Id</td>
                        <td class="text-center align-middle">@reserve.CreateDate.ToString("yyyy/MM/dd")</td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in reserve.ReserveItems)
                                {
                                    <li class="text-primary">@item.book.Name</li>
                                }
                            </ul>
                        </td>
                        <td class="text-center align-middle">
                            @{
                                string status = reserve.Status switch
                                {
                                    "تایید شده" => "تایید شده",
                                    "رد شده" => "رد شده",
                                    _ => "در حال بررسی"
                                };
                            }
                            @status
                        </td>
                        <td class="text-center align-middle">
                            @if (reserve.IsRejected.HasValue && reserve.IsRejected.Value)
                            {
                                @reserve.RejectionReason
                            }
                            else
                            {
                                <span>---</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>


</div>

<style>
    body {
        background-color: #e3f2fd; 
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 20px;
        padding: 20px;
        background-color: #ffffff; 
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #343a40;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin: auto;
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid #dee2e6;
        background-color: #ffffff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .table th,
    .table td {
        text-align: center;
        padding: 12px;
        border: 1px solid #dee2e6;
        vertical-align: middle;
    }

    .table th {
        background-color: #007bff; 
        color: #ffffff;
        font-weight: bold;
        font-size: 1rem;
    }

    .table td {
        font-size: 0.95rem;
        color: #495057;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
    }

    ul.list-unstyled {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    ul.list-unstyled li {
        margin-bottom: 5px;
        font-size: 0.9rem;
        color: #007bff; 
    }

    .alert {
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
        margin-top: 20px;
        padding: 15px;
        border-radius: 8px;
    }

    .alert-info {
        background-color: #e9f7ff; 
        color: #31708f;
        border: 1px solid #b8e0f2;
    }
</style>
