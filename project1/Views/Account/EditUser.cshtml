@model project1.Models.User
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<h2 class="text-center">به صفحه ویرایش اطلاعات کاربر خوش آمدید</h2>

<form asp-action="EditUser" asp-controller="Account" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>نام</label>
        <input class="form-control" name="Name" value="@Model.Name" readonly/>
    </div>

    <div class="form-group">
        <label>ایمیل</label>
        <input class="form-control" name="Email" value="@Model.Email" readonly/>
    </div>

    <div class="form-group">
        <label>رمز عبور</label>
        <input class="form-control" name="Password" value="@Model.Password" readonly/>
    </div>

    <div class="form-group">
        <label>نقش کاربر</label>
        <select class="form-control" name="Role">
            <option value="User" selected="@(Model.Role == "User" ? "selected" : null)">کاربر عادی</option>
            <option value="Admin" selected="@(Model.Role == "Admin" ? "selected" : null)">مدیر</option>
            <option value="Librarian" selected="@(Model.Role == "Librarian" ? "selected" : null)">کتابدار</option>
        </select>
    </div>

    <div class="form-group">
        <label>تاریخ ثبت‌نام</label>
        <input class="form-control" name="RegisterDate" value="@Model.RegisterDate" readonly />
    </div>

    <div class="form-group">
        <label>شماره تلفن همراه</label>
        <input class="form-control" name="Phone" value="@Model.Phone" readonly />
    </div>

    <div class="form-group">
        <label>وضعیت اشتراک</label>
        <input class="form-control" name="IsPremium" value = "@Model.IsPremium.ToString()" readonly />
    </div>

    <div class="form-group">
        <label>فعال(True)/غیرفعال(False)</label>
        <input class="form-control" name="IsActive" value="@Model.IsActive.ToString()" />
    </div>

    <div class="form-group">
        <label>مسدود شده(True)/نشده(False)</label>
        <input class="form-control" name="IsBlocked" value="@Model.IsBlocked.ToString()" />
    </div>

    <div class="form-group">
        <label>مقدار بدهی</label>
        <input class="form-control" name="TotalFineAmount" value="@Model.TotalFineAmount" readonly />
    </div>

    <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
    <a href="/Account/UserList" class="btn btn-secondary">بازگشت</a>
</form>
