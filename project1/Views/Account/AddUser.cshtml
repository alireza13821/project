@model project1.Models.AddUserViewModel

@{
    ViewData["Title"] = "افزودن کاربر جدید";
}

<style>
    body {
        background: linear-gradient(135deg, #fafafa, #e3f2fd); /* پس‌زمینه گرادیانت آبی ملایم */
    }

    h1, h4 {
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2); /* سایه متن */
    }

    h1 {
        color: #1e88e5; /* رنگ عنوان */
        font-size: 2.5rem;
    }

    h4 {
        color: #3949ab; /* رنگ زیرعنوان */
    }

    .card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* سایه کارت */
    }

    label {
        color: #1a237e; /* رنگ برچسب‌ها */
    }

    input {
        background-color: #f1f8e9; /* پس‌زمینه ورودی‌ها */
        border: 2px solid #81c784; /* حاشیه ورودی‌ها */
        border-radius: 5px;
        padding: 10px;
        transition: all 0.3s ease; /* انیمیشن ورودی‌ها */
    }

    input:focus {
        border-color: #388e3c; /* تغییر رنگ هنگام فوکوس */
        box-shadow: 0 0 5px rgba(56, 142, 60, 0.5); /* سایه هنگام فوکوس */
    }

    .btn-primary {
        background-color: #1e88e5;
        border-color: #1e88e5;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0d47a1; /* تغییر رنگ دکمه در هاور */
        transform: scale(1.05); /* بزرگ شدن دکمه در هاور */
    }

    .btn-outline-secondary {
        color: #1a237e;
        border-color: #1a237e;
    }

    .btn-outline-secondary:hover {
        background-color: #3949ab;
        border-color: #3949ab;
    }

    a {
        color: #1e88e5;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #0d47a1; /* تغییر رنگ لینک در هاور */
    }
</style>

<div class="container mt-5">
    
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <h4 class="text-center mb-3">اطلاعات کاربر جدید را وارد کنید :</h4>
    <hr class="mb-5" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-0">
                <form asp-action="AddUser" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Name Field -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">نام:</label>
                        <input asp-for="Name" class="form-control" placeholder="نام را وارد کنید" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Last Name Field -->
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label fw-bold">نام خانوادگی:</label>
                        <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی را وارد کنید" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">ایمیل:</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="آدرس ایمیل خود را وارد کنید" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">رمز عبور:</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور انتخابی خود را وارد کنید" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <input type="submit" value="ایجاد کاربر" class="btn btn-primary btn-lg px-5 me-2" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}
