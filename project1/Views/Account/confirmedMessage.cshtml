@{
    ViewBag.Title = "پیام تأیید";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #eaf6ff; /* بک‌گراند آبی ملایم */
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 20px; /* فضای خالی اطراف */
        }

        .message-box {
            background-color: #ffffff;
            border: 2px solid #007bff;
            border-radius: 10px;
            padding: 20px 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px; /* فاصله از بخش‌های دیگر */
        }

        .message-box h1 {
            color: #007bff;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .message-box p {
            color: #333;
            font-size: 1.2rem;
        }

        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1rem;
            color: #ffffff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="message-box">
            <h1>پیام سیستم</h1>
            <p>@ViewBag.Message</p>
            <a href="/Home/Index" class="btn">بازگشت به صفحه اصلی</a>
        </div>
    </div>
</body>
</html>
