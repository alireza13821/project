@model List<ReserveViewModel>


<div class="container mt-5">
    <h2 class="text-center mb-4">رزروهای درخواست شده</h2>
    
    @if (ViewBag.NoPendingRequests != null)
    {
        <div class="alert alert-info text-center mt-4">
            @ViewBag.NoPendingRequests
        </div>
    }
    else if (Model.Any())
    {
        <table class="table table-hover table-bordered">
<thead class="bg-primary text-white">
    <tr>
        <th class="text-center">شماره رزرو</th>
        <th class="text-center">تاریخ رزرو</th>
        <th class="text-center">درخواست‌دهنده</th> 
        <th class="text-center">کتاب‌ها</th>
        <th class="text-center">عملیات</th>
    </tr>
</thead>
<tbody>
    @foreach (var reserve in Model)
    {
        <tr>
            <td class="text-center align-middle">@reserve.Id</td>
            <td class="text-center align-middle">@reserve.CreateDate.ToString("yyyy/MM/dd")</td>
            <td class="text-center align-middle">@reserve.FullName</td>
            <td>
                <ul class="list-unstyled mb-0">
                    @foreach (var item in reserve.ReserveItems)
                    {
                        <li class="text-primary">@item.book.Name</li>
                    }
                </ul>
            </td>
            <td class="text-center align-middle">
                <form method="post" asp-action="ApproveRequest" asp-route-reserveId="@reserve.Id" class="d-inline">
                    <button type="submit" class="btn btn-success btn-sm">تایید</button>
                </form>
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal" data-reserve-id="@reserve.Id">رد</button>
            </td>
        </tr>
    }
</tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            هیچ درخواستی برای بررسی وجود ندارد.
        </div>
    }
</div>


<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="RejectRequest">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">علت رد درخواست</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="reserveId" name="reserveId" />
                    <div class="mb-3">
                        <label for="reason" class="form-label">علت رد</label>
                        <textarea id="reason" name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لغو</button>
                    <button type="submit" class="btn btn-danger">رد درخواست</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const rejectModal = document.getElementById("rejectModal");
        rejectModal.addEventListener("show.bs.modal", (event) => {
            const triggerButton = event.relatedTarget;
            const reserveId = triggerButton.getAttribute("data-reserve-id");
            document.getElementById("reserveId").value = reserveId;
        });

        rejectModal.addEventListener("hidden.bs.modal", () => {
            document.getElementById("reason").value = "";
        });
    });
</script>


