@model List<project1.Models.User>

@{
    ViewData["Title"] = "مدیریت کتابداران";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #1565c0;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .actions {
        text-align: center;
        margin-bottom: 20px;
    }

    .actions a {
        text-decoration: none;
        display: inline-block;
        background-color: #1565c0;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .actions a:hover {
        background-color: #0d47a1;
        transform: scale(1.05);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        background-color: #ffffff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        border-radius: 10px;
    }

    thead {
        background-color: #1565c0;
        color: white;
    }

    th, td {
        padding: 15px;
        text-align: center;
        border: 1px solid #ddd;
    }

    th {
        font-size: 1rem;
    }

    td {
        font-size: 0.9rem;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e3f2fd;
    }

    button {
        background-color: #1565c0;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    button:hover {
        background-color: #0d47a1;
        transform: scale(1.05);
    }

    form {
        display: inline;
    }
</style>

<h2>مدیریت کتابداران</h2>

<div class="actions">
     <a class="nav-link" asp-action="AddBook" asp-controller="Admin">افزودن کتاب جدید</a>
</div>

<div class="container">
    <table>
        <thead>
            <tr>
                <th>شناسه</th>
                <th>نام</th>
                <th>نام خانوادگی</th>
                <th>ایمیل</th>
                <th>نقش</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Role == "User")
                        {
                            <span style="color: green; font-weight: bold;">کاربر عادی</span>
                        }
                        else if (user.Role == "Admin" || user.Role == "librarian")
                        {
                            <span style="color: red; font-weight: bold;">@(user.Role == "Admin" ? "مدیر" : "کتابدار")</span>
                        }
                    </td>
                    <td>
                        @if (user.Role == "User")
                        {
                            <form method="post" asp-action="PromoteToLibrarian">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit">ارتقا به کتابدار</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
