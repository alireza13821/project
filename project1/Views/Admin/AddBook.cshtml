
@model project1.Models.AddBookViewModel

@{
    ViewData["Title"] = "Add Book";
}

<h1 class="text-center text-primary my-4">📘 افزودن کتاب جدید</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h4 class="card-title text-center text-secondary">اطلاعات کتاب</h4>
                <hr />
                <form asp-action="AddBook" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- نام کتاب -->
                    <div class="form-group my-3">
                        <label asp-for="Name" class="form-label text-dark">نام</label>
                        <input asp-for="Name" class="form-control border-primary shadow-sm" placeholder="نام کتاب" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- توضیحات -->
                    <div class="form-group my-3">
                        <label asp-for="Description" class="form-label text-dark">توضیحات مختصر و مفید</label>
                        <textarea asp-for="Description" class="form-control border-primary shadow-sm"
                        rows="3" placeholder="توضیحات کوتاه مرتبط با کتاب"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Author" class="form-label text-dark">نویسنده</label>
                        <textarea asp-for="Author" class="form-control border-primary shadow-sm"
                        rows="3" placeholder="نویسنده کتاب"></textarea>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="PublishedYear" class="form-label text-dark">سال انتشار</label>
                        <input asp-for="PublishedYear" class="form-control border-primary shadow-sm" type="number"
                        maxlength="4" placeholder="سال انتشار کتاب به شمسی" />
                        <span asp-validation-for="PublishedYear" class="text-danger"></span>
                    </div>

                    <!-- تعداد کتاب -->
                    <div class="form-group my-3">
                        <label asp-for="Quantity" class="form-label text-dark">موجودی</label>
                        <input asp-for="Quantity" class="form-control border-primary shadow-sm" type="number"
                        min="1" placeholder="تعداد موجودی کل کتاب" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Price" class="form-label text-dark">قیمت</label>
                        <input asp-for="Price" class="form-control border-primary shadow-sm" type="number"
                               min="0" placeholder="قیمت کتاب" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!--  تصویر -->
                    <div class="form-group my-3">
                        <label asp-for="Picture" class="form-label text-dark">تصویر</label>
                        <input asp-for="Picture" class="form-control border-primary shadow-sm" type="file" />
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>

                    <!--  نوع کتاب (فروشی / امانتی) -->
                    <div class="form-group my-3">
                        <label asp-for="Type" class="form-label text-dark">نوع کتاب</label>
                        <select asp-for="Type" class="form-select border-primary shadow-sm">
                        <option value="">-- انتخاب کنید --</option>
                        <option value="Sale">فروشی</option>
                        <option value="Borrow">امانتی</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <!-- دکمه‌ها -->
                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2 shadow">ایجاد</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 shadow ms-3">بازگشت به صفحه اصلی</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #e7f3ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card {
        background-color: #ffffff;
        border-radius: 10px;
        border: none;
    }
    .card-title {
        font-weight: bold;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }
    input, textarea, select {
        transition: all 0.3s ease-in-out;
    }
    input:focus, textarea:focus, select:focus {
        outline: none;
        box-shadow: 0px 0px 8px #007bff;
    }
</style>
